<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultatCerca"
    android:background="@mipmap/fondo3">

    <ListView
        android:id="@+id/resultlist"
        android:layout_width="326dp"
        android:layout_height="222dp"
        android:layout_marginTop="12dp"
        android:background="#E6ab8da5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultat"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/resultat"
        android:layout_width="161dp"
        android:layout_height="51dp"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="RESULTAT"
        android:textColor="#4a2343"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton_settings"
        android:layout_width="60dp"
        android:layout_height="55dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="#00000000"
        android:src="@drawable/conf2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/image_categoria"
        android:layout_width="207dp"
        android:layout_height="281dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultlist"
        app:layout_constraintVertical_bias="0.567"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>